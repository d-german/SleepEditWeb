@model List<string>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>Med List</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center mb-4">Select a Medication</h1>
            @if (ViewBag.Message != null)
            {
            <div class="alert alert-success" role="alert">
                @ViewBag.Message
            </div>
            }
            <form asp-action="Index" method="post">
                <div class="input-group mb-3">
                    <input type="text" id="filter" class="form-control" placeholder="Type to filter">
                    <select name="selectedMed" id="medList" class="form-select">
                        <option value="" disabled selected>Select a medication</option>
                    </select>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    var meds = @Html.Raw(Json.Serialize(Model));
    $('#filter').on('keyup', function() {
        var filter = $(this).val().toLowerCase();
        var $dropdown = $('#medList');
        $dropdown.empty();
        $dropdown.append('<option value="" disabled selected>Select a medication</option>');
        if (filter) {
            var filteredMeds = meds.filter(med => med.toLowerCase().startsWith(filter));
            $.each(filteredMeds, function(i, med) {
                $dropdown.append('<option value="' + med + '">' + med + '</option>');
            });
        }
    });
});
</script>

</body>
</html>